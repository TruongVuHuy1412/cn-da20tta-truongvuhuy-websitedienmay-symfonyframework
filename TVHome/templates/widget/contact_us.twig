<div class="modal fade" id="contactUsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Liên hệ với chúng tôi</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
      </div>
      <div class="modal-body">
        {% if successMessage is not null %}
        <div class="alert alert-primary" role="alert">
          {{ successMessage }}
        </div>
        {% else %}
          {{ form_start(form, {action: path('app_contactus')}) }}
          {{ form(form) }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
<script src="{{asset('assets/js/contactform.js')}}"></script>
