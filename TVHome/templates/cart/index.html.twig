<!-- cart + summary -->
<section class="bg-light my-5">
  <div class="container">
    <div class="row">
      <!-- cart -->
      <div class="col-lg-14">
        <div class="card border shadow-0">
          <div class="m-4">
            <h4 class="card-title mb-4">Your shopping cart</h4>
            {% if cart.item.count > 0 %}
            <div class="row mt-4">
              
              <div class="col-md-8">

                {{ form_start(form) }}
                <div class="card">
                    <div class="card-header bg-dark text-white d-flex">
                        <h5>Items</h5>
                        <div class="ml-auto">
                           
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for item in form.item %}
                            <li class="list-group-item d-flex">
                                <div class="flex-fill mr-2">
                                    <img src="{{ item.vars.data.product.image }}" width="64" alt="Product image">
                                </div>
                                <div class="flex-fill mr-2">
                                    <h5 class="mt-0 mb-0">{{ item.vars.data.product.name }}</h5>
                                    <div class="form-inline mt-2">
                                        <div class="form-group mb-0 mr-2">
                                            {{ form_widget(item.quantity, {
                                                'attr': {
                                                    'class': 'form-control form-control-sm ' ~ (item.quantity.vars.valid ? '' : 'is-invalid')
                                                }
                                            }) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(item.quantity) }}
                                            </div>
                                        </div>
                                        {{ form_widget(item.remove, {'attr': {'class': 'btn btn-dark btn-sm'}}) }}
                                    </div>
                                </div>
                                <div class="flex-fill mr-2 text-right">
                                    <b>{{ item.vars.data.product.price }} VND</b>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                {{ form_end(form, {'render_rest': false}) }}

              </div>
              
              <div class="col-md-4">

                <div class="card mt-4 mt-md-0">
                  <h5 class="card-header bg-dark text-white">Summary</h5>
                  <ul class="list-group list-group-flush">
                      <li class="list-group-item d-flex justify-content-between">
                          <div><b>Total</b></div>
                          <span><b>{{ cart.total }}</b></span>
                      </li>
                  </ul>
                  <div class="card-body">
                      <a href="#" class="btn btn-warning w-100">Thanh toán</a>
                      <a href="/user" class="btn btn-light w-100 border mt-2"> Tiếp tục mua sắm </a>
                  </div>
                </div>

              </div>
            </div>
            {% else %}
            <div class="alert alert-info">
              Your cart is empty. Go to the <a href="{{ path('user') }}">product list</a>.
            </div>
            {% endif %}
          </div>
        </div>
      </div>
      <!-- cart -->
    </div>
  </div>
</section>
