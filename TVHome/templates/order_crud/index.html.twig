{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreateAt</th>
                <th>Fullname</th>
                <th>PhoneNumber</th>
                <th>Address</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.CreateAt ? order.CreateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.Fullname }}</td>
                <td>{{ order.PhoneNumber }}</td>
                <td>{{ order.Address }}</td>
                <td>{{ order.Message }}</td>
                <td>
                    <a href="{{ path('app_order_crud_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('app_order_crud_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_crud_new') }}">Create new</a>
{% endblock %}
