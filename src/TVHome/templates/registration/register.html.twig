
<title>{% block title %}Đăng ký{% endblock %}</title>

{% block body %}
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet"/>
<link rel="icon" href="assets/favicon.svg">

<section class="vh-150" style="background-color: #508bfc;">
    <div class="container py-5 h-200">
        <div class="row d-flex justify-content-center align-items-center h-200">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">

                <form method="post">
                    <h3 class=" mb-4">Đăng ký</h3>

                    {{ form_start(registrationForm) }}
                    <div class="row">
                      <div class="col-md-5">
                          <div class="form-outline mb-4">
                              {{ form_widget(registrationForm.lastname, {attr: {'class': 'form-control', 'id': 'registerLastName'}}) }}
                              <label class="form-label" for="registerLastName">Họ</label>
                              {% if form_errors(registrationForm.lastname) %}
                                  <div class="alert alert-danger">
                                      {{ form_errors(registrationForm.lastname) }}
                                  </div>
                              {% endif %}
                          </div>
                      </div>
                      <div class="col-md-7">
                          <div class="form-outline mb-4">
                              {{ form_widget(registrationForm.name, {attr: {'class': 'form-control', 'id': 'registerName'}}) }}
                              <label class="form-label" for="registerName">Tên</label>
                              {% if form_errors(registrationForm.name) %}
                                  <div class="alert alert-danger">
                                      {{ form_errors(registrationForm.name) }}
                                  </div>
                              {% endif %}
                          </div>
                      </div>
                  </div>
                  

                    <div class="form-outline mb-4">
                      {{ form_widget(registrationForm.phone_number, {attr: {'class': 'form-control', 'id': 'registerPhone'}}) }}
                      <label class="form-label" for="registerPhone">Số điện thoại</label>
                    </div>
                    {% if form_errors(registrationForm.phone_number) %}
                      <div class="alert alert-danger">
                        {{ form_errors(registrationForm.phone_number) }}
                      </div>
                    {% endif %}

                    <div class="form-outline mb-4">
                      {{ form_widget(registrationForm.address, {attr: {'class': 'form-control', 'id': 'registerAddress'}}) }}
                      <label class="form-label" for="registerAddress">Địa chỉ</label>
                    </div>
                    {% if form_errors(registrationForm.address) %}
                      <div class="alert alert-danger">
                        {{ form_errors(registrationForm.address) }}
                      </div>
                    {% endif %}

                    <div class="form-outline mb-4">
                      {{ form_widget(registrationForm.email, {attr: {'class': 'form-control', 'id': 'registerEmail'}}) }}
                      <label class="form-label" for="registerEmail">Email (nếu có)</label>
                    </div>

                    <div class="form-outline mb-4">
                      {{ form_widget(registrationForm.username, {attr: {'class': 'form-control', 'id': 'registerUsername'}}) }}
                      <label class="form-label" for="registerUsername">Tên đăng nhập</label>
                    </div>
                    {% if form_errors(registrationForm.username) %}
                      <div class="alert alert-danger">
                        {{ form_errors(registrationForm.username) }}
                      </div>
                    {% endif %}

                    <div class="form-outline mb-4">
                      {{ form_widget(registrationForm.plainPassword.first, {attr: {'type': 'password', 'class': 'form-control', 'id': 'registerPassword'}}) }}
                      <label class="form-label" for="registerPassword">Mật khẩu</label>
                    </div>
                    {% if form_errors(registrationForm.plainPassword.first) %}
                      <div class="alert alert-danger">
                        {{ form_errors(registrationForm.plainPassword.first) }}
                      </div>
                    {% endif %}

                    <div class="form-outline mb-4">
                      {{ form_widget(registrationForm.plainPassword.second, {attr: {'type': 'password', 'class': 'form-control', 'id': 'repeatPassword'}}) }}
                      <label class="form-label" for="repeatPassword">Nhập lại mật khẩu</label>
                      
                    </div>
                    {% if form_errors(registrationForm.plainPassword.second) %}
                      <div class="alert alert-danger">
                        {{ form_errors(registrationForm.plainPassword.second) }}
                      </div>
                    {% endif %}

                    <div class="form-check d-flex justify-content-center mb-4">
                      {{ form_widget(registrationForm.agreeTerms, {attr: {'class': 'form-check-input me-2', 'id': 'registerCheck'}}) }}
    
                    </div>

                        <button type="submit" class="btn btn-primary btn-block mb-4">Đăng ký</button>
                    <div class="text-center mb-2">
                      <p>Đã có tài khoản ? <a href="/login">Đăng nhập</a></p>
                    </div>
                    {{ form_end(registrationForm) }}
                </form>
                
            </div>
          </div>
        </div>
      </div>
  </div>
</section>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
{% endblock %}
