

<title>{% block title %}Đăng nhập{% endblock %}</title>

{% block body %}
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet"/>
<link rel="icon" href="assets/favicon.svg">

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-200">
        <div class="row d-flex justify-content-center align-items-center h-200">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">

                <form method="post">
                
                    {% if app.user %}
                        <div class="mb-3">
                            Bạn đã đăng nhập bằng tài khoản {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Đăng xuất</a>
                        </div>
                    {% endif %}
                <h3 class="mb-5">Đăng nhập</h3>
                <div class="form-outline mb-4">
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control form-control-lg" autocomplete="username" required autofocus>
                    <label class="form-label" for="inputUsername">Tên tài khoản</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required>
                    <label class="form-label" for="inputPassword">Mật khẩu</label>
                </div>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-check d-flex justify-content-start mb-4">
                    <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                    <label class="form-check-label" for="form1Example3"> Lưu tài khoản </label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-primary btn-lg btn-block mb-4">Đăng nhập</button>
                <div class="text-center mb-1">
                    <p>Chưa có tài khoản ? <a href="/register">Đăng ký</a></p>
                    <p>hoặc</p>
                </div>
                
                <a class="btn btn-primary btn-lg btn-block" style="background-color: #db4a39" href="#!"
                    role="button">
                    <i class="fab fa-twitter me-2"></i>Đăng nhập với Google</a>
                </form>
                
              </div>
            </div>
          </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
{% endblock %}
