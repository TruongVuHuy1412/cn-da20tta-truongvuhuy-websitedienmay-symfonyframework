
<title>{% block title %}Đặt hàng!{% endblock %}</title>

{% block body %}
     <!-- Font Awesome -->
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
     rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
    href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    rel="stylesheet"
    />
    <!-- MDB -->
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css"
    rel="stylesheet"
    />
    <link rel="stylesheet" href="assets/css/main.css" />
    <link rel="icon" href="assets/favicon.svg">
        
<body>
    <header class="header navbar-area">
        <div class="topbar">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 col-md-4 col-12">
                        <div class="top-left">
                            <ul class="menu-top-link">
                                <li>
                                    <div class="select-position">
                                        <select id="select4">
                                            <option value="0" selected>$ VND</option>
                                            <option value="2">$ USD</option>
                                        </select>
                                    </div>
                                </li>
                                <li>
                                    <div class="select-position">
                                        <select id="select5">
                                            <option value="0" selected>tiếng Việt</option>
                                            <option value="1">English</option>
                                        </select>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-12">
                        <div class="top-middle">
                            <ul class="useful-links">
                                <li><a href="/">Trang chủ</a></li>
                                <li><a href="#">Giới thiệu</a></li>
                                <li><a href="#" >Liên hệ</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-12">
                        <div class="top-end">
                            <ul class="user-login">
                                <li>
                                    <a href="/login">Đăng nhập</a>
                                </li>
                                <li>
                                    <a href="/register">Đăng ký</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header> 

    <section class="bg-light py-5 ">
        <div class="container d-flex justify-content-center">
          <div class="row">
            <div class="col-xl-12 col-lg-8 mb-4">
      
              <!-- Checkout -->
              <div class="card shadow-0 border">
                <div class="p-4">
                  <h5 class="card-title mb-3">Thông tin đặt hàng:</h5>
                  {{ form_start(order) }}
                  <div class="row">
                    <div class="col-6 mb-3">
                      <p class="mb-0">Họ và tên:</p>
                      <div class="form-outline">
                        {{ form_widget(order.fullname, {attr: {'class': 'form-control', 'id': 'typeFullname'}}) }}
                      </div>
                    </div>
                    {% if form_errors(order.fullname) %}
                      <div class="alert alert-danger">
                        {{ form_errors(order.fullname) }}
                      </div>
                    {% endif %}

                    <div class="col-6">
                      <p class="mb-0">Số điện thoại:</p>
                      <div class="form-outline">
                        {{ form_widget(order.phonenumber, {attr: {'class': 'form-control', 'id': 'typePhone'}}) }}
                      </div>
                    </div>
                    {% if form_errors(order.phonenumber) %}
                      <div class="alert alert-danger">
                        {{ form_errors(order.phonenumber) }}
                      </div>
                    {% endif %}

                    <div class="col-12 mb-3">
                      <p class="mb-0">Địa chỉ:</p>
                      <div class="form-outline">
                        {{ form_widget(order.address, {attr: {'class': 'form-control', 'id': 'typeAddress'}}) }}
                      </div>
                    </div>
                    {% if form_errors(order.address) %}
                      <div class="alert alert-danger">
                        {{ form_errors(order.address) }}
                      </div>
                    {% endif %}
                  </div>
      
                  <hr class="my-4" />
      
                  <div class="mb-3">
                    <p class="mb-0">Ghi chú cho người bán:</p>
                    <div class="form-outline">
                        {{ form_widget(order.message, {attr: {'class': 'form-control', 'id': 'typeMessage'}}) }}
                    </div>
                  </div>
                  <div class="float-end">
                    <button type="submit" class="btn btn-primary shadow-0 border" data-mdb-ripple-init data-mdb-modal-init data-mdb-target="#exampleModal">Đặt hàng</button>
                  </div>
                  {{ form_end(order) }}
                </div>
              </div>
              <!-- Checkout -->
            </div>
            
          </div>
        </div>
      </section>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h5 class="modal-title" id="exampleModalLabel">Đặt hàng thành công !</h5>
            </div>
            <div class="modal-body">Xin cảm ơn quý khách đã tin tưởng và sử dụng dịch vụ.</div>
      
          </div>
        </div>
      </div>

      <script src="assets/js/bootstrap.min.js"></script>
        <script src="assets/js/main.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
        <!-- MDB -->
        <script
          type="text/javascript"
          src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.umd.min.js"
        ></script>


</body>
{% endblock %}


